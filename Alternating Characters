#include <bits/stdc++.h>
#include<string>
using namespace std;

// Complete the alternatingCharacters function below.
int main(){
    int n;
    cin >> n;
    string arr;
    for(int i = 0 ; i < n; i++){
        cin >> arr;
        int count = 0;
        for(int j = 0; j < arr.length(); j++){
            if(arr[j] == arr[j+1]){
                count++;
            }
        }
        cout << count << endl;
    }
    return 0;
}
